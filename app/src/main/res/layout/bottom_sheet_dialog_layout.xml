<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/exitBS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_exit_bs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:src="@drawable/ic_person_bs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitBS" />

    <Button
        android:id="@+id/deleteBs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="delete"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toEndOf="@+id/imageBs"
        app:layout_constraintTop_toTopOf="@+id/imageBs" />

    <Button
        android:id="@+id/editBs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="@+id/deleteBs"
        app:layout_constraintTop_toBottomOf="@+id/deleteBs" />

    <Button
        android:id="@+id/cloneBs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="clone"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toEndOf="@+id/deleteBs"
        app:layout_constraintTop_toTopOf="@+id/deleteBs" />

    <Button
        android:id="@+id/selectBs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="@+id/cloneBs"
        app:layout_constraintTop_toBottomOf="@+id/cloneBs" />


</androidx.constraintlayout.widget.ConstraintLayout>